{
    "prefer-stable": true,
    "require": {
        "php": "^8.4",
        "ext-dom": "*",
        "phpunit/php-text-template": "^5.0",
        "sebastian/cli-parser": "^4.0",
        "sebastian/version": "^6.0"
    },
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "config": {
        "platform": {
            "php": "8.4.0"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "5.0-dev"
        }
    }
}
